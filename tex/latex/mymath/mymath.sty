%chap6 du cours d'auto
\newcommand*{\hmm}[2]{
    {\tikzset{external/export=false}
          \tikz[overlay, 
                remember picture,
                baseline=-\the\dimexpr\fontdimen22\textfont2\relax
                ] 
          \node[rectangle,
                inner sep=1pt,
                rounded corners,
                draw,
                #2,
                thick,
                text=black
                ] {$#1$};
            }
} 

% Laplace 
\newcommand*{\laplace}[1]{\mathscr{L}\left\{#1\right\}}
\newcommand*{\laplacei}[1]{\mathscr{L}^{-1}\left\{#1\right\}}
\newcommand*{\rttensor}[1]{\overline{\overline{#1}}}

% j omega
\newcommand*{\jw}{j\omega}
