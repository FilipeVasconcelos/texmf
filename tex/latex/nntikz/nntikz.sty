\newcommand{\nndim}[2][]{%
      \def\xoff{1.5cm}
      \def\yoff{2cm}
      \newcounter{k}
      \setcounter{k}{0}
      \def\nextitem{\def\nextitem{#1}}% Separator
      \renewcommand*{\do}[1]{
         % \nextitem\textsf{##1}
          \ifthenelse{\isodd{##1}}%
          { %%Odd
            \nextitem{\foreach \x in {1,...,##1}
                {
                    \draw[very thick] (\xoff*\thek,\x*\yoff) circle (8pt);
                }
            }
          }%
          { %Even
            \nextitem{\foreach \x in {1,...,##1}
                {
                    \draw[very thick] (\xoff*\thek,\x*\yoff+\yoff) circle (8pt);
                }
            }
          }%
      \stepcounter{k}
      }% How to process each item
      \docsvlist{#2}% Process list
}
