\newcommandx{\dpole}[4][3=,4=blue]{
    \node at (#1,#2) [thick,cross=5pt,#4]       {};
    \node at (#1,#2) [#4,below,yshift=-0.5em]   {$p_#3$};
}
\newcommandx{\dzero}[4][3=,4=red]{
    \node at (#1,#2) [thick,circ=5pt,#4]        {};
    \node at (#1,#2) [#4,below,yshift=-0.5em]   {$z_#3$};
}

\newcommandx{\carte}[1][1=l]{
    \def\mode{#1}
    \draw[very thick,-latex]     (0,-1.5) -- (0,2.0) node[left]  {Im\{p\}};
    \ifthenelse{\equal{\mode}{l}}{%left
        \draw[very thick,-latex] (-2.5,0) -- (1.0,0) node[below] {Re\{p\}};
}{}
    \ifthenelse{\equal{\mode}{c}}{%center
        \draw[very thick,-latex] (-1.5,0) -- (2.0,0) node[below] {Re\{p\}};
}{}
    \ifthenelse{\equal{\mode}{r}}{%rignt
        \draw[very thick,-latex] (-1.0,0) -- (2.5,0) node[below] {Re\{p\}};
}{}
}
