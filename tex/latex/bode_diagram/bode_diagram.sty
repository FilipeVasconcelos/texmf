\newcommandx{\bodegain}[6][4=,5=,6=]{%
\def\xx{#1}
\def\yy{#2}
\def\hh{#3}
\begin{axis}[
    name=bodegain,
    width=0.9\textwidth,
    height=\hh\textheight,
    ylabel={Gain (dB)},
    xticklabels={#4},
    yticklabels={#5},
    ytick={0,1,...,\yy}, 
    xmode=log,ymode=normal,
    xmin=1e0, xmax=1e\xx,
    ymin=0, ymax=\yy,
    grid=both,
    major grid style={black!50,line width=.4pt}
]
%\addplot[ultra thick, blue,domain=1e1:1e4, samples=201] {#6};
\end{axis}
}
